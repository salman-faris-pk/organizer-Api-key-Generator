{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "nodenext",
    "target": "es2022",
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": false,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  },
   "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "ui"]
}